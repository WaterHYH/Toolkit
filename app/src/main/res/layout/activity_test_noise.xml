<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:id="@+id/rootview">

    <Button
        android:id="@+id/recorder1_start"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="录音1开始"/>
    <Button
        android:id="@+id/recorder1_stop"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="录音1停止"
        android:layout_toRightOf="@id/recorder1_start"/>

    <Button
        android:id="@+id/recorder2_start"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="录音2开始"
        android:layout_toRightOf="@id/recorder1_stop"/>
    <Button
        android:id="@+id/recorder2_stop"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="录音2停止"
        android:layout_toRightOf="@id/recorder2_start"/>

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@id/recorder1_start">
        <TextView
            android:id="@+id/log_view"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />
    </ScrollView>
</RelativeLayout>